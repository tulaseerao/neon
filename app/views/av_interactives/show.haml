- model_class = AvInteractive
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:brand) + ':'
  %br
  = @device.brand

%p
  %strong= model_class.human_attribute_name(:device_type) + ':'
  %br
  = @device.device_type

%p
  %strong= model_class.human_attribute_name(:location) + ':'
  %br
  = @device.location

%p
  %strong= model_class.human_attribute_name(:model) + ':'
  %br
  = @device.model

%p
  %strong= model_class.human_attribute_name(:asset_tag) + ':'
  %br
  = @device.asset_tag

%p
  %strong= model_class.human_attribute_name(:serial_no) + ':'
  %br
  = @device.serial_no

%p
  %strong= model_class.human_attribute_name(:status) + ':'
  %br
  = @device.status

%p
  %strong= model_class.human_attribute_name(:value) + ':'
  %br
  = @device.value

%p
  %strong= model_class.human_attribute_name(:lease) + ':'
  %br
  = @device.lease

%p
  %strong= model_class.human_attribute_name(:lease_term) + ':'
  %br
  = @device.lease_term

%p
  %strong= model_class.human_attribute_name(:owner) + ':'
  %br
  = @device.owner

%p
  %strong= model_class.human_attribute_name(:notes) + ':'
  %br
  = @device.notes

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), devices_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_device_path(@device), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), device_path(@device), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'

