- model_class = AvDevice
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:status) + ':'
  %br
  = @av_device.status
%p
  %strong= model_class.human_attribute_name(:asset_tag) + ':'
  %br
  = @av_device.asset_tag
%p
  %strong= model_class.human_attribute_name(:device) + ':'
  %br
  = @av_device.device
%p
  %strong= model_class.human_attribute_name(:location) + ':'
  %br
  = @av_device.location
%p
  %strong= model_class.human_attribute_name(:brand) + ':'
  %br
  = @av_device.brand
%p
  %strong= model_class.human_attribute_name(:model) + ':'
  %br
  = @av_device.model
%p
  %strong= model_class.human_attribute_name(:serial_number) + ':'
  %br
  = @av_device.serial_number
%p
  %strong= model_class.human_attribute_name(:value) + ':'
  %br
  = @av_device.value
%p
  %strong= model_class.human_attribute_name(:lease) + ':'
  %br
  = @av_device.lease
%p
  %strong= model_class.human_attribute_name(:lease_term) + ':'
  %br
  = @av_device.lease_term
%p
  %strong= model_class.human_attribute_name(:owner_or_teacher) + ':'
  %br
  = @av_device.owner_or_teacher
%p
  %strong= model_class.human_attribute_name(:notes) + ':'
  %br
  = @av_device.notes

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), av_devices_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_av_device_path(@av_device), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), av_device_path(@av_device), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
