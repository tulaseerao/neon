    = f.label :asset_tag, :class => 'control-label'
    .controls
      = f.text_field :asset_tag, :class => 'text_field'
  .control-group
    = f.label :device, :class => 'control-label'
    .controls
      = f.text_field :device, :class => 'text_field'
  .control-group
    = f.label :location, :class => 'control-label'
    .controls
      = f.text_field :location, :class => 'text_field'
  .control-group
    = f.label :brand, :class => 'control-label'
    .controls
      = f.text_field :brand, :class => 'text_field'
  .control-group
    = f.label :model, :class => 'control-label'
    .controls
      = f.text_field :model, :class => 'text_field'
  .control-group
    = f.label :serial_number, :class => 'control-label'
    .controls
      = f.text_field :serial_number, :class => 'text_field'
  .control-group
    = f.label :value, :class => 'control-label'
    .controls
      = f.text_field :value, :class => 'text_field'
  .control-group
    = f.label :lease, :class => 'control-label'
    .controls
      = f.text_field :lease, :class => 'text_field'
  .control-group
    = f.label :lease_term, :class => 'control-label'
    .controls
      = f.text_field :lease_term, :class => 'text_field'
  .control-group
    = f.label :owner_or_teacher, :class => 'control-label'
