- model_class = Printer
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:printer) + ':'
  %br
  = @printer.printer
%p
  %strong= model_class.human_attribute_name(:location) + ':'
  %br
  = @printer.location
%p
  %strong= model_class.human_attribute_name(:host_server) + ':'
  %br
  = @printer.host_server
%p
  %strong= model_class.human_attribute_name(:ip_address) + ':'
  %br
  = @printer.ip_address
%p
  %strong= model_class.human_attribute_name(:win_7) + ':'
  %br
  = @printer.win_7
%p
  %strong= model_class.human_attribute_name(:win_xp) + ':'
  %br
  = @printer.win_xp
%p
  %strong= model_class.human_attribute_name(:asset_tag) + ':'
  %br
  = @printer.asset_tag
%p
  %strong= model_class.human_attribute_name(:serial_number) + ':'
  %br
  = @printer.serial_number
%p
  %strong= model_class.human_attribute_name(:comment) + ':'
  %br
  = @printer.comment

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), printers_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_printer_path(@printer), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), printer_path(@printer), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
