= form_for @printer, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :printer, :class => 'control-label'
    .controls
      = f.text_field :printer, :class => 'text_field'
  .control-group
    = f.label :location, :class => 'control-label'
    .controls
      = f.text_field :location, :class => 'text_field'
  .control-group
    = f.label :host_server, :class => 'control-label'
    .controls
      = f.text_field :host_server, :class => 'text_field'
  .control-group
    = f.label :ip_address, :class => 'control-label'
    .controls
      = f.text_field :ip_address, :class => 'text_field'
  .control-group
    = f.label :win_7, :class => 'control-label'
    .controls
      = f.text_field :win_7, :class => 'text_field'
  .control-group
    = f.label :win_xp, :class => 'control-label'
    .controls
      = f.text_field :win_xp, :class => 'text_field'
  .control-group
    = f.label :asset_tag, :class => 'control-label'
    .controls
      = f.text_field :asset_tag, :class => 'text_field'
  .control-group
    = f.label :serial_number, :class => 'control-label'
    .controls
      = f.text_field :serial_number, :class => 'text_field'
  .control-group
    = f.label :comment, :class => 'control-label'
    .controls
      = f.text_field :comment, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), printers_path, :class => 'btn'
