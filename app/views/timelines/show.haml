- model_class = Timeline
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:device) + ':'
  %br
  = @timeline.device
%p
  %strong= model_class.human_attribute_name(:date_of_service) + ':'
  %br
  = @timeline.date_of_service
%p
  %strong= model_class.human_attribute_name(:qty) + ':'
  %br
  = @timeline.qty

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), timelines_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_timeline_path(@timeline), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), timeline_path(@timeline), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
