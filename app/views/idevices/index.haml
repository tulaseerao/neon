- model_class = Idevice
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:device_type)
      %th= model_class.human_attribute_name(:serial_number)
      %th= model_class.human_attribute_name(:asset_tag)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @idevices.each do |device|
      %tr
        %td= link_to device.id, device_path(device)
        %td= device.name
        %td= device.device_type
        %td= device.serial_number
        %td= device.asset_tag
        %td=l device.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_idevice_path(device), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), idevice_path(device), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_idevice_path, :class => 'btn btn-primary'
%br/
%br/
