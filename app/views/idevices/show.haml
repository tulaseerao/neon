- model_class = Idevice
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:device_type) + ':'
  %br
  = @idevice.device_type
%p
  %strong= model_class.human_attribute_name(:model_number) + ':'
  %br
  = @idevice.model_number
%p
  %strong= model_class.human_attribute_name(:capacity_hd) + ':'
  %br
  = @idevice.capacity_hd
%p
  %strong= model_class.human_attribute_name(:serial_number) + ':'
  %br
  = @idevice.serial_number
%p
  %strong= model_class.human_attribute_name(:asset_tag) + ':'
  %br
  = @idevice.asset_tag
%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @idevice.name

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), idevices_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_idevice_path(@idevice), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), idevice_path(@idevice), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
