= form_for @idevice, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :name, :class => 'control-label'
    .controls
      = f.text_field :name, :class => 'text_field'
  
  .control-group
    = f.label :device_type, :class => 'control-label'
    .controls
      = f.text_field :device_type, :class => 'text_field'
  
  .control-group
    = f.label :model_number, :class => 'control-label'
    .controls
      = f.text_field :model_number, :class => 'text_field'
  
  .control-group
    = f.label :hd_capacity, :class => 'control-label'
    .controls
      = f.text_field :hd_capacity, :class => 'text_field'
  
  .control-group
    = f.label :serial_number, :class => 'control-label'
    .controls
      = f.text_field :serial_number, :class => 'text_field'
  
  .control-group
    = f.label :asset_tag, :class => 'control-label'
    .controls
      = f.text_field :asset_tag, :class => 'text_field'
  
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), devices_path, :class => 'btn'
